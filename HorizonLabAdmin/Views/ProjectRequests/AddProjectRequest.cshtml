@{
    ViewData["Title"] = "AddProjectRequest";
    Layout = "~/Views/Shared/_HlabWebAdminLayout.cshtml";
}
@model HorizonLabAdmin.Helpers.Containers.ProjectRequestPageObject
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link href="~/css/jquery.datetextentry.css" rel="stylesheet" />
<script src="~/js/jquery-ui.js"></script>
<script src="~/js/jquery.datetextentry.js"></script>
<script src="~/js/fm.timetator.jquery.js"></script>
<script src="~/js/general_functions.js"></script>
<script src="~/js/bulk_request_insert_events.js"></script>

<div class="row" style="height:800px; font-size:1.2rem; overflow:auto;">
    <div class="col-lg-12">
        <form asp-action="ProcessNewProjectRequest" asp-controller="ProjectRequestPosts" method="post" class="" id="order_page_form">
            <div class="panel panel-success">
                <div class="panel-heading"><h4>Add Project Request</h4></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">PROJECT</span>
                                <select asp-for="@Model.selected_project_id" asp-items="@Model.ProjectSelectList" class="form-control"></select>
                                <span class="input-group-addon">
                                    <button type="button" class="" value="" id="add_new_project">ADD</button>
                                </span>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon">DATE REQUEST</span>
                                <input asp-for="@Model.InputDateRequest" type="Text" class="form-control datepicker_default" id="" autocomplete="off"/>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon">TEST PACKAGE</span>
                                <select asp-for="@Model.selected_testpkg_id" asp-items="@Model.TestPackageSelectList" class="form-control"></select>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon">PAYMENT</span>
                                <select asp-for="@Model.selected_payment_type_id" asp-items="@Model.PaymentSelectList" class="form-control"></select>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon"># OF RECORDS</span>
                                <input asp-for="@Model.row_count" type="Text" class="form-control number_only" id="" />
                            </div>
                        </div>

                        <div class="col-sm-1">
                            <div class="input-group">
                                <button type="submit" class="btn btn-success" value="" id="place_order_btn">Submit</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

