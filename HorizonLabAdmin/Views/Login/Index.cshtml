
@{Layout = null;}
<!DOCTYPE html>
<html lang="en">
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<head>

    <title>Horizon Lab</title>
    <link rel="icon" href="~/images/horizonlab_icon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


    <style type="text/css">
        .login-form {
            width: 340px;
            margin: 50px auto;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>


    <div class="login-form">
        <form action="" method="post">
            <img src="~/images/@(Configuration.GetValue<string>("hlab_logo"))" class="img-responsive center-block" /><br />
            <h2 class="text-center">ADMIN</h2>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" required="required" name="txt_username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="required" name="txt_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Log in</button>
            </div>
            <div class="clearfix">
                <!--<label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>-->
                <a href="#" class="pull-right">Forgot Password?</a>
            </div>
        </form>
        <p class="text-center"><b><font color="red">@Html.Raw(ViewData["LoginMessage"])</font></b></p>
    </div>

</body>
</html>
